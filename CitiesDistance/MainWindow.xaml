<Window x:Class="CitiesDistance.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CitiesDistance"
        mc:Ignorable="d"
        Title="World Ruler" Height="321.2" Width="408" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label x:Name="label" Content="От:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label_Copy" Content="До:" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Source_textBox" Height="23" Margin="50,12.96,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="Москва"/>
        <TextBox x:Name="Destination_textBox" Height="23" Margin="50,40.96,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="Новосибирск"/>
        <Button x:Name="Go_button" Content="Узнать" Margin="10,68.96,10,0" VerticalAlignment="Top" Click="Go_button_Click"/>
        <TextBox x:Name="Result_textBox" Margin="10,93.92,10,10.4" TextWrapping="Wrap" IsReadOnly="True" VerticalScrollBarVisibility="Auto" FontFamily="Consolas"/>

    </Grid>
</Window>
